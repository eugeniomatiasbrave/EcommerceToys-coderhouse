<div class="w-1/3 mx-auto mt-10">
  <h1 class="mb-6 text-center text-4xl font-bold tracking-tight text-blue-700">Crear Producto</h1>
  <form id="formProduct" class="space-y-4" enctype="multipart/form-data">
    <div class="form-row">
      <div class="form-control">
        <label for="title" class="block text-sm/6 font-medium text-gray-900">Título</label>
         <input type="text" name="title" id="title" class="block w-full border border-gray-300 rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6">
      </div>

      <div class="form-control">
        <label for="description" class="block text-sm/6 font-medium text-gray-900">Descripción</label>
        <input type="text" name="description" id="description" class="block w-full border border-gray-300 rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6">
      </div>
      
      <div class="form-control">
        <label for="code" class="block text-sm/6 font-medium text-gray-900">Código</label>
        <input type="text" name="code" id="code" class="block w-full border border-gray-300 rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6">
      </div>
      <div class="form-control">
        <label for="price" class="block text-sm/6 font-medium text-gray-900">Precio</label>
        <input type="number" name="price" id="price" class="block w-full border border-gray-300 rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6">
      </div>

      <div class="form-control">
        <label for="stock" class="block text-sm/6 font-medium text-gray-900">Stock</label>
        <input type="number" name="stock" id="stock" class="block w-full border border-gray-300 rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6">
      </div>

    <div class="form-control">
      <label for="category" class="block text-sm/6 font-medium text-gray-900">Categoria</label>
      <select name="category" id="category" class="block w-full border border-gray-300 rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6">
      <option value="sin categoria">Categoria</option>
      <option value="electricos">Electricos</option>
      <option value="juegos de mesa y salon">Juegos de mesa y salon</option>
      <option value="Ladrillos y bloques">Ladrillos y bloques</option>
      <option value="libros infantiles">Libros infantiles</option>
      <option value="muñecas y accesorios">Muñecas y accesorios</option>
      <option value="pelotas y accesorios">Pelotas y accesorios</option>
     </select>
    </div>
    
    <div class="form-control my-4">
    <label for="status" class="block text-sm/6 font-medium text-gray-900 flex items-center">
     <input type="checkbox" name="status" id="status" class="mr-2 border-gray-300 rounded text-indigo-600 focus:ring-indigo-500">
      Estado
    </label>
   </div>
    
    <div class="form-control">
      <label for="thumbnail" class="block text-sm/6 font-medium text-gray-900">Thumbnails</label>
      <input type="file" name="thumbnail" multiple required placeholder="Thumbnails" class="block w-full rounded-md bg-white py-2.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" aria-label="Thumbnail">
    </div>
    <div class="form-control mt-6">
      <input type="submit" value="Crear Producto" class="w-full rounded-md bg-blue-700 px-3 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
    </div>
    
    </div>
  </form>
</div>

<div class=" container mx-auto p-6 rounded-lg mt-10">
{{#if products}}

<h1 class="text-3xl text-blue-700 font-bold text-center my-6">Lista de Productos</h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">
  {{#each products}}
  <div class="card shadow-lg compact w-2/3 border border-gray-400 rounded-lg hover:shadow-xl transition-shadow duration-300">
    <div class="card-body">
      <h2 class="card-title text-blue-800">{{this.title}}</h2>
      <div class="flex flex-wrap gap-2">
        {{#each this.thumbnails}}
          <img src="{{this.path}}" class="w-32 h-32 object-cover rounded-lg">
        {{/each}}
      </div>
      <!--<p class="text-gray-800"><strong>ID:</strong> {{this._id}}</p>-->
      <p class="text-gray-800"><strong>Descripción:</strong> {{this.description}}</p>
      <p class="text-gray-800"><strong>Categoría:</strong> {{this.category}}</p>
      <p class="text-gray-800"><strong>Código:</strong> {{this.code}}</p>
      <!--<p class="text-gray-800"><strong>Estado:</strong> {{this.status}}</p>-->
      <p class="text-gray-800"><strong>Precio:</strong> ${{this.price}}</p>
      <p class="text-gray-800"><strong>Stock:</strong> {{this.stock}}</p>
      
      <div class="card-actions justify-end">
        <button class="rounded-md bg-red-600 text-sm font-semibold px-3 py-2 delete-product" data-pid="{{this._id}}">Eliminar</button>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<!--paginado-->
<div class="flex justify-center items-center mt-6">
  {{#if hasPrevPage}}
    <a href="http://localhost:8080/products?page={{prevPage}}" class="btn btn-outline mx-2">Anterior</a>
  {{/if}}
  <h4 class="text-lg font-semibold mx-4 text-blue-800">{{page}}</h4>
  {{#if hasNextPage}}
    <a href="http://localhost:8080/products?page={{nextPage}}" class="btn btn-outline mx-2">Siguiente</a>
  {{/if}}
</div>
{{else}}
<h1 class="text-3xl font-bold text-center my-6">No hay lista de productos en este momento</h1>
{{/if}}


<script src="/js/realTimeProducts.js"></script>