<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/daisyui@1.14.0/dist/full.css"
    />
    <title>{{title}}</title>
  </head>
  <body class="flex flex-col min-h-screen bg-white">
    <nav class="navbar bg-blue-700 border-b border-gray-700" role="navigation" aria-label="Main Navigation">
      <div class="flex-1">
        <a href="/" class="btn btn-ghost normal-case text-3xl text-white font-extrabold" aria-label="Inicio">Juguetería Toys</a>
      </div>
      <div class="flex-1">
        {{#if user}}
          <p class="text-white">Hola, bienvenido a Toy's {{user.firstName}}!</p>
        {{else}}
          <p class="text-white">¡Bienvenido a Toy's!</p>
        {{/if}}
      </div>
      <div class="flex flex-wrap space-x-2 items-center">
        {{#if user}}
          {{#if (eq user.role "admin")}}
            <a href="/products" class="btn btn-ghost text-white font-semibold hover:text-gray-200">Productos</a>
            <a href="/realTimeProducts" class="btn btn-ghost text-white font-semibold hover:text-gray-200">Crear Productos</a>
          {{/if}}
          {{#if (eq user.role "user")}}
            <a href="/products" class="btn btn-ghost text-white font-semibold hover:text-gray-200">Productos</a>
            <a href="/profile" class="btn btn-ghost text-white font-semibold hover:text-gray-200">Perfil</a>
            <a href="/carts" class="btn btn-ghost text-white font-semibold hover:text-gray-200">Carrito</a>
          {{/if}}
          <a href="/api/sessions/logout" class="btn btn-ghost text-white font-semibold hover:text-gray-200">Cerrar Sesión</a>
        {{else}}
          <a href="/login" class="btn btn-ghost text-white font-semibold hover:text-gray-200">Iniciar Sesión</a>
          <a href="/register" class="btn btn-ghost text-white font-semibold hover:text-gray-200">Registro</a>
        {{/if}}
      </div>
    </nav>

    <main class="flex-grow">
      {{{body}}}
    </main>

    <footer class="bg-blue-700 text-white py-4">
      <div class="container mx-auto text-center">
        <p>&copy; 2023 Juguetería Toys. Todos los derechos reservados.</p>
      </div>
    </footer>
  </body>
</html>