<div class="w-full max-w-md mx-auto mt-32 p-6 border border-gray-300 rounded-lg shadow-xl">
  <h1 class="mb-6 text-center text-4xl font-bold tracking-tight text-blue-700">Inicia Sesión</h1>
  <form id="loginForm" class="space-y-6">
    <div class="form-control">
      <label for="email" class="block text-sm/6 font-medium text-gray-900">Email</label>
      <input type="email" name="email" id="email" autocomplete="email" required class="block w-full border border-gray-300 rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6">
    </div>
    <div class="form-control">
     <label for="password" class="block text-sm/6 font-medium text-gray-900">Contraseña</label>
       <input type="password" name="password" id="password" autocomplete="password" required class="block w-full border border-gray-300 rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6">
    </div>
    <div class="form-control mt-6">
      <input type="submit" value="Iniciar Sesión" class="w-full rounded-md bg-blue-700 px-3 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
    </div>
  </form>
 <p class="mt-10 text-center text-sm text-gray-500">
  ¿No tienes una cuenta? 
  <a href="/register" class="font-semibold text-blue-700 hover:text-blue-500">Regístrate </a>
</p>
</div>



<script src="/js/login.js"></script>