<!--vista de productos-->
{{#if products}}
	
<div class="bg-white ">
  
  <div class="mt-20 border border-gray-300 rounded-lg mx-auto max-w-2xl px-4 py-10 sm:px-6 sm:py-15 lg:max-w-7xl lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-4xl font-semibold tracking-tight text-pretty text-gray-900 sm:text-5xl">Lista de Productos</h2>
      <p class="mt-2 text-lg/8 text-gray-600">Descubre todos los productos disponibles en nuestra tienda.</p>
    </div>
    <div class="border-t border-gray-200 pt-10 px-5 my-10 grid grid-cols-1 gap-x-6 gap-y-10 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
      {{#each products}}
      <a href="http://localhost:8080/detail/{{this._id}}" class="group shadow-lg p-5">
      <img src="{{this.thumbnails.[0].path}}" alt="{{this.description}}" class="h-56 w-56  rounded-lg bg-gray-200 object-cover group-hover:opacity-75">  
        <h3 class="mt-4 text-sm text-gray-700">{{this.title}}</h3>
        <p class="mt-1 text-lg font-medium text-gray-900">${{this.price}}</p>
      </a>
      {{/each}}
    </div>
  </div>
</div>

<!--paginado-->
<div class="flex justify-center mt-6">
  {{#if hasPrevPage}}
    <a href="http://localhost:8080/products?page={{prevPage}}">
      <button class="btn btn-outline border-green-500 text-green-500 hover:bg-green-500 hover:text-white">Anterior</button>
    </a>
  {{/if}}
  <h4 class="mx-4 text-lg font-semibold text-gray-700">PÃ¡gina {{page}}</h4>
  {{#if hasNextPage}}
    <a href="http://localhost:8080/products?page={{nextPage}}">
      <button class="btn btn-outline border-green-500 text-green-500 hover:bg-green-500 hover:text-white">Siguiente</button>
    </a>
  {{/if}}
</div>
{{else}}
<div class="container mx-auto p-6 bg-gradient-to-r from-red-100 via-red-200 to-red-300 rounded-lg shadow-xl mt-10">
  <h1 class="text-3xl font-bold text-center text-red-800">No hay lista de productos en este momento</h1>
</div>
{{/if}}